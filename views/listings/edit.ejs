<% layout("./layouts/boilerplate.ejs") %>
<div class="row mt-3">
    <div class="col-8 offset-2">
        <h3>Edit Your Listing</h3>
            <form method="POST" action="/listing/<%= listing._id %> /edit?_method=PUT" novalidate class="needs-validation">
                <div class="mb-3"> 
                    <label for="title" class="form-label">Title</label>
                    <input name= "listing[title]"
                    value="<%= listing.title %>" 
                    class="form-control" 
                    type="text"
                    required
                     />
                    <div id="validationServerUsernameFeedback" class="invalid-feedback">
                        Please Add the Title for the Listing.
                    </div>
                    <div class="valid-feedback">
                        Looks correct Name!
                    </div>
                </div>
                <div class="mb-3">
                    <label for="description" class="from-label">Description</label>
                    <textarea name="listing[description]" 
                    value="<%= listing.description %>" class="form-control" required>
                        <%=listing.description %>
                    </textarea>
                    <div id="validationServerUsernameFeedback" class="invalid-feedback">
                        Please Add the Descriptiopn for the Listing.
                    </div>
                    <div class="valid-feedback">
                        Looks correct Description!
                    </div>
                </div>
                <div class="mb-3">
                    <label for="image" class="from-label" >Image</label>
                    <input name="listing[image][url]" value="<%= listing.image.url %>" type= "text" 
                    class="form-control">
                </div>
                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="from-label" >Price</label>
                        <input name="listing[price]" value="<%= listing.price %>" placeholder="Enter Price" type="number" 
                        class="form-control">
                        <div id="validationServerUsernameFeedback" class="invalid-feedback">
                        Please Add the Price for the Listing.
                    </div>
                    <div class="valid-feedback">
                        Looks correct Price!
                    </div>
                    </div>
                    <div class="mb-3 col-md-8">
                        <label for="country" class="from-label" >Country</label>
                        <input name="listing[country]" value="<%= listing.country %>" placeholder="Enter Country Name" type="text"
                        class="form-control">
                    </div>
                    <div id="validationServerUsernameFeedback" class="invalid-feedback">
                        Please Add the Country name for the Listing.
                    </div>
                    <div class="valid-feedback">
                        Looks correct Country Name!
                    </div>
                </div>
                <div class="mb-3">
                    <label for="location" class="from-label" >Location</label>
                    <input name="listing[location]" value="<%= listing.location %>" placeholder="Enter Location" type="text"
                    class="form-control">
                    <div id="validationServerUsernameFeedback" class="invalid-feedback">
                        Please Add the Location for the Listing.
                    </div>
                    <div class="valid-feedback">
                        Looks correct Location!
                    </div>
                </div>
                <button class="btn btn-dark add-btn">Add Listing</button>
            </form>
        </div>
    </div>
</div>
<script src="/public/js/script.js"></script>

